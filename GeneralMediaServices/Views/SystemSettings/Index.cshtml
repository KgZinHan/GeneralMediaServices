@model GeneralMediaServices.Models.User

@{
    ViewData["Title"] = "Connect Database";
}
<div class="col-12">
    <div id="messageBox" class="alert alert-danger @((ViewBag.AlertMessage != null) ? "" : "d-none")" role="alert">
        @ViewBag.AlertMessage
    </div>
</div>

<div class="container">
    <div class="card-header bg-dark">
        <h3 class="card-title "><i class="nav-icon fas fa-cog"></i>&emsp;Database System Setting</h3>
    </div>
    <form asp-action="Index" class="form-horizontal">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Server" class="col-sm-2 col-form-label">Server</label>
                <div class="col-sm-10">
                    <input asp-for="Server" type="text" class="form-control" id="inputServer" placeholder="Server">
                    <span asp-validation-for="Server" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Database" class="col-sm-2 col-form-label">Database</label>
                <div class="col-sm-10">
                    <input asp-for="Database" type="text" class="form-control" id="inputDatabase" placeholder="Database">
                    <span asp-validation-for="Database" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserId" class="col-sm-2 col-form-label">UserId</label>
                <div class="col-sm-10">
                    <input asp-for="UserId" type="text" class="form-control" id="inputUserId" placeholder="UserId">
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-dark">Connect</button>
        </div>
    </form>
</div>

